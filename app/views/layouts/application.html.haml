%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= @page_title
    = csrf_meta_tags
    = csp_meta_tag
    %meta{content: "#{@seo_keywords}", name: "keywords"}/
