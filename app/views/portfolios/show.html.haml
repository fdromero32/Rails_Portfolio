.container
  .row{style: " margin-top: 80px;"}
    .col-md-7
      = image_tag @portfolio_item.main_image
    .col-md-5
      %h1= @portfolio_item.title
      %hr/
      %em= @portfolio_item.subtitle
      %p= @portfolio_item.body
      %hr/
      %h3 Technologies Used:
      - @portfolio_item.technologies.each do |t|
        %p= t.name
    %footer.text-muted
    .container
      %p.float-right{style: " margin-top: 81px;"}
        = link_to "View All Portfolio Items", portfolios_path
      %p{style: " margin-top: 80px;"}
      =@copyright

